<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogAttendance">

    <ListView
        android:id="@+id/student_log_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/log_submit_btn"
        >
    </ListView>

    <Button
        android:id="@+id/log_submit_btn"
        android:text="Submit"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/empty_log_placeholder"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No recorded students available"/>

</RelativeLayout>